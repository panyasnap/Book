<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text"
               value="<%= books.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDescription">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDescription"
        ><%= books.description %></textarea>
    </div>
    <div class="form-group">
        <label for="inputAuthor">Автор</label>
        <input
                name="authors"
                class="form-control"
                id="inputAuthor"
        ><%= books.authors %>
    </div>
    <div class="form-group">
        <label for="inputfavorite">Избранное</label>
        <input
                name="favorite"
                class="form-control"
                id="inputfavorite"
        ><%= books.favorite %>
    </div>
    <div class="form-group">
        <label for="inputfileCover">fileCover</label>
        <input
                name="fileCover"
                class="form-control"
                id="inputfileCover"
        ><%= books.fileCover %>
    </div>
    <div class="form-group">
        <label for="inputfileName">fileName</label>
        <input
                name="fileName"
                class="form-control"
                id="inputfileName"
        ><%= books.fileName %>
    </div>
    <div class="form-group">
        <label for="inputfileBook">fileBook</label>
        <input
                name="fileBook"
                class="form-control"
                id="inputfileBook"
        ><%= books.fileBook %>
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>