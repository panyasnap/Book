<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title"><%= books.title %></h5>
                <p class="card-text"><%= books.description %></p>
                <p class="card-text"><%= books.authors %></p>
                <p class="card-text"><%= books.favorite %></p>
                <p class="card-text"><%= books.fileCover %></p>
                <p class="card-text"><%= books.fileName %></p>
                <p class="card-text"><%= books.fileBook %></p>

                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/api/books/update/<%= books.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/api/books/delete/<%= books.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>
                <!--                <div>-->
                <!--                    <form action="/api/books/<%= books.id %>/download" method="GET">-->
                <!--                        <button class="btn btn-sm btn btn-info">-->
                <!--                            Скачать файл-->
                <!--                            &lt;!&ndash;            <i class="fa fa-trash" aria-hidden="true"></i>&ndash;&gt;-->
                <!--                        </button>-->
                <!--                    </form>-->
                <!--                </div>-->
                <div class="row">
                    <div class="col-4">
                        <div id="list" class="list-group">
                            <% msg.map((el, idx) => {  %>
                                <div>
                                    <b><%= el.username %>:</b>
                                    <div><%= el.text %></div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
                <form action="/api/books/view/<%= books.id %>" method="POST">
                    <div class="form-group mt-5">
                        <label for="username">username</label>
                        <input
                                placeholder="username"
                                type="text"
                                id="username"
                                class="form-control"
                                name="username"
                        >
                    </div>
                    <div class="form-group">
                        <label for="text">comment</label>
                        <textarea
                                placeholder="message"
                                class="form-control"
                                id="text"
                                name="text"
                        ></textarea>
                    </div>
                    <!--                <button type="submit" id="send-all" class="btn btn-primary">all</button>-->

                    <button type="submit" id="send-room" class="btn btn-primary">Комментировать</button>
                </form>
                <!--                <button type="submit" id="send-me" class="btn btn-primary">me</button>-->
            </div>
        </div>
    </div>
</div>
<script>
    const roomName = location.pathname.split('/').pop();
